# .bashrc

# Source global definitions
if [ -f /etc/bashrc ]; then
	. /etc/bashrc
fi

# Uncomment the following line if you don't like systemctl's auto-paging feature:
# export SYSTEMD_PAGER=

# User specific aliases and functions

# sudo ln -s /usr/share/git-core/contrib/completion/git-prompt.sh /etc/profile.d/
if [ -f /etc/profile.d/git-prompt.sh ] && \
   [ -L /etc/profile.d/git-prompt.sh ]; then
	PS1='$(__git_ps1 "(%s) ")\[\e[1;33m\]\u\[\e[0m\]@\[\e[1;35m\]\h\[\e[0m\]:\[\e[1;36m\]\W\[\e[0m\]\$ '
else
	PS1='\[\e[1;33m\]\u\[\e[0m\]@\[\e[1;35m\]\h\[\e[0m\]:\[\e[1;36m\]\W\[\e[0m\]\$ '
fi

# pidgin-sipe
export NSS_SSL_CBC_RANDOM_IV=0

# svn
export SVN_EDITOR=vim

# history
HISTTIMEFORMAT='%F %T '

# aliases
alias cp='cp -i'
alias df='df -kTh'
alias diff='colordiff'
alias du='du -kh'
alias h='history'
alias j='job -l'
alias ll='ls -l'
alias ls='ls -F'
alias mv='mv -i'
alias rm='rm -i'
alias vi='vim'

alias syu='sudo yum update'
alias syi='sudo yum install'

# ignore ssh/scp warnings
alias ssh='ssh -o StrictHostKeyChecking=no -o UserKnownHostsFile=/dev/null'
alias scp='scp -o StrictHostKeyChecking=no -o UserKnownHostsFile=/dev/null'

# git
alias g='git'
alias gadd='git add'
alias gcheckout='git checkout'
alias gcherrypick='git cherry-pick'
alias gdiff='git diff'
alias glog='git log --oneline --decorate'
alias gmerge='git merge'
alias gpull='git pull'
alias gpush='git push'
alias grm='git rm'

# docker
alias sd='sudo docker'
alias sdbuild='sudo docker build'
alias sdclean='sudo docker rm $(sudo docker ps -q -f status=exited)'
alias sdcleani='sudo docker rmi $(sudo docker images -q -f dangling=true)'
alias sdps='sudo docker ps'
alias sdpsa='sudo docker ps -a'
alias sdrm='sudo docker rm -f'
alias sdrmi='sudo docker rmi -f'


OS_VERSION=$(awk -F'=' '/VERSION_ID=/{print$2}' /etc/os-release)

if [ ${OS_VERSION} -lt 22 ]; then
  # lenovo trackpoint
  if [ $(cat /sys/devices/virtual/dmi/id/chassis_vendor) = "LENOVO" ]; then
  	xinput set-prop "TPPS/2 IBM TrackPoint" "Evdev Wheel Emulation" 1
  	xinput set-prop "TPPS/2 IBM TrackPoint" "Evdev Wheel Emulation Button" 2
  	xinput set-prop "TPPS/2 IBM TrackPoint" "Evdev Wheel Emulation Timeout" 200
  fi
fi

# custom aliases
if [ -f ~/.bash_aliases ]; then
	. ~/.bash_aliases
fi
